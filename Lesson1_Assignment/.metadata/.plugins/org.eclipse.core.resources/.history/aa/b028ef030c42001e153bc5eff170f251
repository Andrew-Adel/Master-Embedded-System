#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <conio.h>

#define DPRINT(...) printf(__VA_ARGS__);\
					fflush(stdin); fflush(stdout);\

typedef struct {
	int ID;
	char name[40];
	float height;
} SData;

struct Student{
	SData Student_Data;
	SStudent* PNextStudent;
};
typedef struct Student SStudent;
SStudent* gpFirstStudent = NULL;

void Fill_the_record(SStudent* new_student);
void AddStudent(void);
int DeleteStudent(void);
void ViewStudents(void);
void DeleteAll(void);

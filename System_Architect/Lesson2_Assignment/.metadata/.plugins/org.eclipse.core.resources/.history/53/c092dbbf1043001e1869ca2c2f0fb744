#include "DC_motor.h"
//extern pointer from DC_motor.h
extern void (*DC_State) ();
//Module Variable
unsigned int speed;
void (*DC_State) ();

void DC_init(void){
	// initialize US motor
	// Call US Driver or motors
	printf("DC_Init is Done");
}
DC_motor(int s){
	speed =s;
	DC_state = STATE(DC_busy);
	printf(" CA -> -> -> DC DC_motor() \n");
}
// states function
STATE_define(DC_busy)
{
	//state action
	DC_state_id = DC_busy;

	// change to next state (in US case, it always be busy state)
	DC_State = STATE(DC_idle);

	// Print
	printf("DC_Busy State : speed=%d \n\n\n", speed);
}

STATE_define(DC_idle)
{
	//state action
	DC_state_id = DC_idle;
	// change to next state (in US case, it always be busy state)
	DC_State = STATE(DC_idle);
	//Print
	printf("DC_idle State : speed=%d \n\n\n", speed);

}

#ifndef FIFO_H_
#define FIFO_H_

#include "platform_types.h"
#include "platform_types.h"
#include <stdio.h>
//#include <stdlib.h>

//USER Configuration
// select element type (uint8, uint16, uint32, ...)
#define element_type uint8
#define width1 5
element_type buff[width1];

typedef struct {
	uint32 length;
	uint32 count;
	element_type* base;
	element_type* head;
	element_type* tail;
}FIFO_Buf_t;

typedef enum{
	LIFO_no_error,
	LIFO_full,
	LIFO_empty,
	LIFO_Null
}LIFO_status;

LIFO_status LIFO_Push_Item(LIFO_Buf_t* lifo_buf, uint32 item);
LIFO_status LIFO_Pop_Item(LIFO_Buf_t* lifo_buf, uint32* item);
LIFO_status LIFO_Init(LIFO_Buf_t* lifo_buf, uint32* buf, uint32 length);


#endif

#include "students.h"

int main ()
{
	char temp[40];
	while (1)
	{
		DPRINT("\n ====================")
		DPRINT("\n\t Choose of the following Options \n")
		DPRINT("\n 1: AddStudent ")
		DPRINT("\n 2: DeleteStudent ")
		DPRINT("\n 3: ViewStudents ")
		DPRINT("\n 4: DeleteAll ")
		DPRINT("\n Enter Option Number: ")

				gets(temp);

		switch (atoi(temp)) {
		case 1:
			AddStudent();
			break;
		case 2:
			DeleteAll();
			break;
		case 3:
			ViewStudents();
			break;
		case 4:
			DeleteAll();
			break;
		default:
			DPRINT("\n Wrong Option")
			break;
		}
	}
}

#include "lifo.h"

LIFO_status LIFO_Init(LIFO_Buf_t* lifo_buf, uint32* buf, uint32 length){
	if(buf == NULL)
		return LIFO_Null;
	lifo_buf->base =buf;
	lifo_buf->count = 0;
	lifo_buf->head = buf;
	lifo_buf->length = length;


	return LIFO_no_error;
}

LIFO_status LIFO_Push_Item(LIFO_Buf_t* lifo_buf, uint32 item){
	// check LIFO is valid
	if (!lifo_buf->base || !lifo_buf->head)
		return LIFO_Null;
	// check LIFO is full
	if(lifo_buf->count >= lifo_buf->length)
		return LIFO_full;
	// add item and increment head
	*(lifo_buf->head++) = item;

	return LIFO_no_error;
}

LIFO_status LIFO_Pop_Item(LIFO_Buf_t* lifo_buf, uint32* item){
	// check LIFO is valid
	if (!lifo_buf->base || !lifo_buf->head)
		return LIFO_Null;
	// check LIFO is full
	if(lifo_buf->count == 0)
		return LIFO_empty;
	*item = lifo_buf->head--;

	return LIFO_no_error;
}
